<?xml version="1.0" encoding="utf-8" ?>
<Patch>


	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Alpha Biomes</li>
		</mods>

		<match Class="PatchOperationSequence">
			<success>Always</success>
			<operations>

				<li Class="PatchOperationAdd"> 
					<success>Always</success>
					<xpath>/Defs/VanillaPlantsExpanded.TillableTerrainDef[defName="VCE_AcceptedTillableTerrains"]/terrains</xpath>
					<value>
						<li>AB_DenseGrass</li>
						<li>AB_ForsakenSand</li>
						<li>AB_RichCrackedMud</li>
						<li>AB_SlimeGrass</li>
						<li>AB_MycoticSoil</li>
						<li>AB_MycoticGrass</li>
						<li>GU_AlienSand</li>
						<li>GU_RichAlienSand</li>
						<li>AB_MycoticSoilRich</li>
						<li>AB_LushGrass</li>
					</value>
				</li>

				<li Class="PatchOperationAdd"> 
					<success>Always</success>
					<xpath>/Defs/BiomeDef[defName = "AB_FeraliskInfestedJungle"]/wildPlants</xpath>
					<value>
						<VCE_BananaTree>0.01</VCE_BananaTree>
						<VCE_OrangeTree>0.01</VCE_OrangeTree>
					</value>
				</li>

				<li Class="PatchOperationAdd"> 
					<success>Always</success>
