<Patch>
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Vanilla Brewing Expanded</li>
		</mods>
		<match Class="PatchOperationSequence">
			<operations>
				<li Class="PatchOperationAdd">
					<xpath>/Defs</xpath>
					<value>
						<!--ThingDef for the machine-->
						<ThingDef ParentName="BuildingBase">
							<defName>VFE_LiquorMixer</defName>
							<label>Liquor Mixer</label>
							<description>A wondrous machine that takes the concept of a pressure cooker to an intoxicating level. Inserted ingredients are turned into a fine paste and mixed with a piping hot liquid loaded with catalytic fermentation accelerators. The process is thoroughly mixed and oxygenated as it cools before being transferred to a high pressure tank. As the process is accelerated and thus affects the taste, the fermenting liquid is agitated and stimulated with more chemicals and electrolysis to replicate a taste and alcohol content close to its desired output. Once finished, it is bottled and cooled to a palatable temperature.</description>
							<thingClass>ItemProcessor.Building_ItemProcessor</thingClass>
							<graphicData>
								<texPath>Things/Buildings/LiquorMixer/LiquorMixer</texPath>
								<graphicClass>Graphic_Multi</graphicClass>
								<drawSize>(5,8)</drawSize>
								<shaderType>CutoutComplex</shaderType>
								<damageData>
									<cornerTL>Damage/Corner</cornerTL>
									<cornerTR>Damage/Corner</cornerTR>
									<cornerBL>Damage/Corner</cornerBL>
									<cornerBR>Damage/Corner</cornerBR>
								</damageData>
							</graphicData>
							<thingCategories>
								<li>BuildingsProduction</li>
							</thingCategories>
							<costList>
								<Steel>550</Steel>
								<ComponentIndustrial>15</ComponentIndustrial>
								<Plasteel>60</Plasteel>
								<VFE_ComponentMechanoid>1</VFE_ComponentMechanoid>
							</costList>
							<placeWorkers>
								<li>VFEMech.PlaceWorker_OnFactoryFloorAndPath</li>
							</placeWorkers>
							<building>
								<soundAmbient>GeothermalPlant_Ambience</soundAmbient>
								<wantsHopperAdjacent>true</wantsHopperAdjacent>
								<buildingTags>
									<li>Production</li>
								</buildingTags>
								<blueprintGraphicData>
									<texPath>Things/Buildings/LiquorMixer/LiquorMixer_BP</texPath>
									<graphicClass>Graphic_Multi</graphicClass>
								</blueprintGraphicData>
							</building>
							<altitudeLayer>BuildingOnTop</altitudeLayer>
							<rotatable>true</rotatable>
							<neverMultiSelect>true</neverMultiSelect>
							<uiIconScale>0.8</uiIconScale>
							<fillPercent>0.5</fillPercent>
							<useHitPoints>True</useHitPoints>
							<statBases>
								<Mass>100</Mass>
								<WorkToBuild>15000</WorkToBuild>
								<MaxHitPoints>325</MaxHitPoints>
								<Flammability>1.0</Flammability>
							</statBases>
							<tickerType>Rare</tickerType>
							<size>(3,6)</size>
							<designationCategory>VFE_Factory</designationCategory>
							<passability>PassThroughOnly</passability>
							<pathCost>70</pathCost>
							<hasInteractionCell>True</hasInteractionCell>
							<interactionCellOffset>(0,0,4)</interactionCellOffset>
							<surfaceType>Item</surfaceType>
							<comps>
								<li Class="CompProperties_Power">
									<compClass>CompPowerTrader</compClass>
									<shortCircuitInRain>false</shortCircuitInRain>
									<basePowerConsumption>700</basePowerConsumption>
								</li>
								<li Class="CompProperties_Flickable" />
								<li Class="ItemProcessor.CompProperties_ItemProcessor">
									<buildingOnGraphic>Things/Buildings/LiquorMixer/LiquorMixer</buildingOnGraphic>
									<numberOfInputs>1</numberOfInputs>
									<acceptsNoneAsInput>false</acceptsNoneAsInput>
									<transfersIngredientLists>false</transfersIngredientLists>
									<isAutoMachine>true</isAutoMachine>
									<isAutoDropper>true</isAutoDropper>
									<showFactoryProgressBar>true</showFactoryProgressBar>
									<isMachineSpecifiesOutput>true</isMachineSpecifiesOutput>
									<isCompletelyAutoMachine>true</isCompletelyAutoMachine>
									<noPowerDestroysProgress>true</noPowerDestroysProgress>
									<isMachinePausable>true</isMachinePausable>
									<rareTicksToDestroy>10</rareTicksToDestroy>
									<destroyIngredientsAtStartOfProcess>true</destroyIngredientsAtStartOfProcess>
									<chooseIngredientsIcon>UI/IP_SetOutput</chooseIngredientsIcon>
									<InsertFirstItemDesc>IP_ChooseOutput</InsertFirstItemDesc>
									<bringIngredientsText>VFEM_BringIngredients</bringIngredientsText>
									<bringIngredientsDesc>VFEM_BringIngredientsDesc</bringIngredientsDesc>
									<bringIngredientsIcon>UI/IP_Begin</bringIngredientsIcon>
									<inputSlots>
										<li>(1,0,-3)</li>
									</inputSlots>
								</li>
							</comps>
							<minifiedDef>MinifiedThing</minifiedDef>
							<researchPrerequisites Inherit='False'>
								<li>VFE_ProvisionsPackagingFactory</li>
							</researchPrerequisites>
							<modExtensions>
								<li Class="VanillaFurnitureExpanded.ShowBlueprintExtension">
									<showBlueprintInGhostMode>true</showBlueprintInGhostMode>
								</li>
							</modExtensions>
							<constructionSkillPrerequisite>8</constructionSkillPrerequisite>
						</ThingDef>
						<!--Combinations-->
						<ItemProcessor.CombinationDef>
							<defName>VFE_LiquorMixer_Hops</defName>
							<building>VFE_LiquorMixer</building>
							<items>
								<li>RawHops</li>
							</items>
							<amount>
								<li>50</li>
							</amount>
							<result>Beer</result>
							<yield>20</yield>
							<outputLimitControlled>true</outputLimitControlled>
							<maxTotalOutput>300</maxTotalOutput>
							<useQualityIncreasing>false</useQualityIncreasing>
							<singleTimeIfNotQualityIncreasing>5</singleTimeIfNotQualityIncreasing>
						</ItemProcessor.CombinationDef>
						<ItemProcessor.CombinationDef>
							<defName>VFE_LiquorMixer_Ambrosia</defName>
							<building>VFE_LiquorMixer</building>
							<items>
								<li>Ambrosia</li>
							</items>
							<amount>
								<li>100</li>
							</amount>
							<result>VBE_AmbrandyNormal</result>
							<yield>5</yield>
							<outputLimitControlled>true</outputLimitControlled>
							<maxTotalOutput>300</maxTotalOutput>
							<useQualityIncreasing>false</useQualityIncreasing>
							<singleTimeIfNotQualityIncreasing>5</singleTimeIfNotQualityIncreasing>
							<resultUsesSpecialIcon>True</resultUsesSpecialIcon>
							<resultSpecialIcon>Things/Items/Drinks/VBE_Ambrandy/VBE_Ambrandy_b</resultSpecialIcon>
						</ItemProcessor.CombinationDef>
						<ItemProcessor.CombinationDef>
							<defName>VFE_LiquorMixer_Corn</defName>
							<building>VFE_LiquorMixer</building>
							<items>
								<li>RawCorn</li>
							</items>
							<amount>
								<li>50</li>
							</amount>
							<result>VBE_Whiskey</result>
							<yield>20</yield>
							<outputLimitControlled>true</outputLimitControlled>
							<maxTotalOutput>300</maxTotalOutput>
							<useQualityIncreasing>false</useQualityIncreasing>
							<singleTimeIfNotQualityIncreasing>5</singleTimeIfNotQualityIncreasing>
						</ItemProcessor.CombinationDef>
						<ItemProcessor.CombinationDef>
							<defName>VFE_LiquorMixer_InsectMeat</defName>
							<building>VFE_LiquorMixer</building>
							<items>
								<li>Meat_Megaspider</li>
							</items>
							<amount>
								<li>50</li>
							</amount>
							<result>VBE_Tequila</result>
							<yield>20</yield>
							<outputLimitControlled>true</outputLimitControlled>
							<maxTotalOutput>300</maxTotalOutput>
							<useQualityIncreasing>false</useQualityIncreasing>
							<singleTimeIfNotQualityIncreasing>5</singleTimeIfNotQualityIncreasing>
						</ItemProcessor.CombinationDef>
						<ItemProcessor.CombinationDef>
							<defName>VFE_LiquorMixer_Potatoes</defName>
							<building>VFE_LiquorMixer</building>
							<items>
								<li>RawPotatoes</li>
							</items>
							<amount>
								<li>50</li>
							</amount>
							<result>VBE_Vodka</result>
							<yield>20</yield>
							<outputLimitControlled>true</outputLimitControlled>
							<maxTotalOutput>300</maxTotalOutput>
							<useQualityIncreasing>false</useQualityIncreasing>
							<singleTimeIfNotQualityIncreasing>5</singleTimeIfNotQualityIncreasing>
						</ItemProcessor.CombinationDef>
						<ItemProcessor.CombinationDef>
							<defName>VFE_LiquorMixer_Berries</defName>
							<building>VFE_LiquorMixer</building>
							<items>
								<li>RawBerries</li>
							</items>
							<amount>
								<li>50</li>
							</amount>
							<result>VBE_Gin</result>
							<yield>20</yield>
							<outputLimitControlled>true</outputLimitControlled>
							<maxTotalOutput>300</maxTotalOutput>
							<useQualityIncreasing>false</useQualityIncreasing>
							<singleTimeIfNotQualityIncreasing>5</singleTimeIfNotQualityIncreasing>
						</ItemProcessor.CombinationDef>
					</value>
				</li>
			</operations>
		</match>
	</Operation>
</Patch>
